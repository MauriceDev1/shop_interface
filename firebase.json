{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "framework": {
      "client": "react",
      "ssr": {
        "source": "src/ssr"
      }
    }
  }
}
